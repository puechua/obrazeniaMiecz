<Window x:Class="obrazeniaMiecz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:obrazeniaMiecz"
        mc:Ignorable="d"
        Title="MainWindow" Height="175" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <CheckBox x:Name="flaming" Content="Płonący" HorizontalAlignment="Center" VerticalAlignment="Center" Checked="flaming_Checked" Unchecked="flaming_Unchecked"/>
        
        <CheckBox x:Name="magic" Content="Magiczny" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Checked="magic_Checked" Unchecked="magic_Unchecked"/>
        
        <Button Content="Wykonaj rzut" Grid.Row="1" Grid.ColumnSpan="2" Click="Button_Click" Margin="10,0,20,0"/>
        <TextBlock x:Name="damage" Text="obrażenia" TextWrapping="Wrap" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>


    </Grid>
</Window>
